<% if (locals.user) { %>
<header class="header">
  <nav class="header-nav">
    <ul>
      <li id="friendsIcon" class="nav-icons">
        <a href="./main/friends/<%= locals.user.id %>"><img src="./img/friend-icon.svg" alt="Friends" id="friend-icon"></a>
        <ul id="collapsible-friend-list">
          <li><a href="./addFriend">+ add friend</a></li>
          <!--- APPEND ALL FRIENDS -->
        </ul>
      </li>
      <li id="groupIcon" class="nav-icons">
        <a href="./main/groups/<%= locals.user.id %>"><img src="./img/group-icon.svg" alt="Groups" id="group-icon"></a>
        <ul id="collapsible-group-list">
          <li><a href="./createGroup">+ create group</a></li>
          <!--- APPEND ALL GROUPS -->
        </ul>
      </li>
      <li id="settingsIcon" class="nav-icons">
        <a href="./main/settings"><img src="./img/settings-icon.svg" alt="Settings" id="settings-icon"></a></li>
    </ul>
  </nav>

  <logged-in-box name="<%= locals.user.username %>">
    <img slot="profile" src="./img/placeholder-profile-img.png" alt="profile">
  </logged-in-box>

  <form class="logout-form" action="./logout" method="POST">
    <button class="logout-btn" type="submit"><img src="./img/logout-btn.svg" alt="Logout"></button>
  </form>
</header>
<% } %>